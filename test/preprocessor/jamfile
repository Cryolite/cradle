project cradle/test/preprocessor
  : requirements
    <toolset>msvc:<cxxflags>"/we4003"
  ;

path-constant HERE : . ;

build-project va ;

import path ;

for local i in [ path.glob $(HERE) : *_compile.cpp ]
{
  local target-name = $(i:B) ;
  compile
      $(i)
      /cradle/ext/boost//headers
    : # requirements
    : $(target-name)
    ;
}

for local i in [ path.glob $(HERE) : *_compile_fail.cpp ]
{
  local target-name = $(i:B) ;
  compile-fail
      $(i)
      /cradle/ext/boost//headers
    : # requirements
    : $(target-name)
    ;
}
